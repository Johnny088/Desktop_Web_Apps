<Window x:Class="_03_SportShopUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_SportShopUI"
        mc:Ignorable="d"
        Title="FirstWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Click="Button_click" Margin="5 0">
                Load all Salles
            </Button>
            <Button Click="Button_Click_1" Margin="5 0" >
                Last purchase by name of a client
            </Button>
            <Button Click="Button_Click_2" Margin="5 0">
                Insert new salles
            </Button>
            
        </ToolBar>
        <DataGrid Name="dataGrid"></DataGrid>
    </DockPanel>

</Window>
